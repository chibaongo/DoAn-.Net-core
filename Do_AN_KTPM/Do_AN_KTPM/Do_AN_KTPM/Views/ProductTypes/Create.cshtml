@model Do_AN_KTPM.Models.ProductType
<link href="~/css/styleCreate.css" rel="stylesheet">
@{
    ViewData["Title"] = "Create";
}

<a asp-action="Index" class="text-white  p-30  bg-dark "><i class="fa fa-arrow-left "></i></a>


<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" class="col-md-10 khung">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @section MsgCreateFail{
                <script>
                    setTimeout(function () {
                        $('#msgCreateFail').fadeOut('slow');
                    }, 3000);

                </script>
            }

            @if (ViewBag.CreateFail != null)
            {
                <div id="msgCreateFail" class="alert alert-primary text-center m-3" role="alert">
                    @ViewBag.CreateFail
                </div>
            }
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @* <div class="form-group form-check">
            <label class="form-check-label">
            <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
            </label>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
            <input asp-for="Status" type="hidden" value="true" />
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
