@model IEnumerable<Product>

@{

}

<link href="~/css/styleListAccounts.css" rel="stylesheet">
<div class="container-fluid">
    <div class="col-lg-4 col-6 text-left search">
        <form asp-action="Search">
            <div class="input-group ">
                <input type="text" class="form-control rdu " name="Name" placeholder="Search for product (name)">
                <div class="input-group-append  ">
                    <span class="input-group-text bg-transparent text-primary sizeInput">
                        <button class="rdu"><i class="fa fa-search"></i></button>

                    </span>
                </div>
            </div>
        </form>
    </div>
    <div class="row px-xl-5">
        <!-- Shop Sidebar Start -->
        <div class="col-lg-3 col-md-4">
            <!-- Price Start -->
            <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Filter by price</span></h5>
            <div class="bg-light p-4 mb-30">
                <form asp-controller="Products" asp-action="Index" method="post">
                    <div class="radio">
                        <label><input type="radio" name="priceorderby" value="0" @(ViewBag.CheckedRadio == 0 ? "checked":"")>All</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="priceorderby" value="1" @(ViewBag.CheckedRadio == 1 ? "checked":"")>0 - 100000</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="priceorderby" value="2" @(ViewBag.CheckedRadio == 2 ? "checked":"")>100000 - 300000</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="priceorderby" value="3" @(ViewBag.CheckedRadio == 3 ? "checked":"")>300000 - 500000</label>
                    </div>
                    <div class="radio">
                        <label><input type="radio" name="priceorderby" value="4" @(ViewBag.CheckedRadio == 4 ? "checked":"")>500000 - 3000000</label>
                    </div>
                    <button type="submit">Sort </button>
                </form>
            </div>

            <!-- Size End -->
        </div>
        <!-- Shop Sidebar End -->
        <!-- Shop Product Start -->
        <div class="col-lg-9 col-md-8">
            <div class="row pb-3">
                <div class="col-12 pb-1">
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6 pb-1">
                        <div class="product-item bg-light mb-4">

                            <img class="img-fluid w-100" src="~/img/product/@item.Image" style="height:350px" alt="">

                            <div class="product-img position-relative overflow-hidden">
                                <div class="product-action">
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-shopping-cart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="far fa-heart"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-sync-alt"></i></a>
                                    <a class="btn btn-outline-dark btn-square" href=""><i class="fa fa-search"></i></a>
                                </div>
                            </div>
                            <div class="text-center py-4">
                                <a class="h6 text-decoration-none text-truncate">@item.Name</a>
                                @*  <a class="h6 text-decoration-none text-truncate" href="">Product Name Goes Here</a>*@
                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    <h5>@item.Price</h5> <h6> đ</h6>
                                    @* <h5>$123.00</h5><h6 class="text-muted ml-2"><del>$123.00</del></h6>*@
                                </div>
                                <div class="d-flex align-items-center justify-content-center mb-1">
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small class="fa fa-star text-primary mr-1"></small>
                                    <small>(99)</small>
                                </div>

                                <a asp-controller="Products" asp-route-id="@item.Id" asp-action="Detail">Chi tiết sản phẩm</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
        <!-- Shop Product End -->
    </div>
</div>
<!-- Shop End -->
<!-- Footer Start -->
<!-- Back to Top -->
<a href="#" class="btn btn-primary back-to-top"><i class="fa fa-angle-double-up"></i></a>
