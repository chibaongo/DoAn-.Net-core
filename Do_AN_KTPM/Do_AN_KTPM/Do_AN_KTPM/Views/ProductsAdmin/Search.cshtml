<link href="~/css/styleListAccounts.css" rel="stylesheet">
@model IEnumerable<Product>
<!--Search-->

<a asp-controller="Home" asp-action="Index" class="text-white  p-30  bg-dark "><i class="fa fa-arrow-left "></i></a>
<div class="col-lg-4 col-6 text-left search">
    <form asp-action="Search">
        <div class="input-group ">
            <input type="text" class="form-control rdu " name="Name" placeholder="Search for product (name)">
            <div class="input-group-append  ">
                <span class="input-group-text bg-transparent text-primary sizeInput">
                    <button class="rdu"><i class="fa fa-search"></i></button>

                </span>
            </div>
        </div>
    </form>
</div>






<table class="table table-light m-3  ">
    <thead class="table-dark">


        <tr>
            <th>SKU</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>ProductTypeId</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SKU</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.ProductTypeId</td>

                <td>
                    <img src="~/img/product/@item.Image" style="width:90px">
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>